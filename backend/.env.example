# Configurações do Banco de Dados
DB_USER=your_db_user
DB_HOST=localhost
DB_NAME=your_db_name
DB_PASSWORD=your_db_password
DB_PORT=5432

# Configurações de Autenticação
# IMPORTANTE: Gere uma chave JWT segura usando: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here


# Credenciais do Administrador
ADMIN_USERNAME=admin_username
# IMPORTANTE: Gere o hash da sua senha usando: node -e "const bcrypt = require('bcrypt'); bcrypt.hash('SUA_SENHA', 10).then(hash => console.log('Hash:', hash));"
ADMIN_PASSWORD_HASH=admin_password_hash

# Configurações do Servidor
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
# Para produção, altere FRONTEND_URL para a URL real do seu frontend
# Exemplo: FRONTEND_URL=https://seudominio.com

